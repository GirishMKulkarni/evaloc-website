---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Our Clients" description="Evaloc is trusted by government agencies, corporations, and municipalities across India. View our client portfolio.">
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <span class="page-label">Trusted Partners</span>
      <h1>Our Clients</h1>
      <p>Government agencies, corporations, and municipalities rely on Evaloc</p>
    </div>
  </section>

  <!-- Client Stats -->
  <section class="section">
    <div class="container">
      <div class="client-stats">
        <div class="stat">
          <span class="stat-number">150+</span>
          <span class="stat-label">Government & Corporate Projects</span>
        </div>
        <div class="stat">
          <span class="stat-number">1000s</span>
          <span class="stat-label">Farm Ponds Protected</span>
        </div>
        <div class="stat">
          <span class="stat-number">40+</span>
          <span class="stat-label">Years of Service</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Client Categories -->
  <section class="section section-dark">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Client Portfolio</span>
        <h2 class="section-title">Who Uses Evaloc</h2>
        <p class="section-subtitle">
          From government water authorities to leading industrial corporations, Evaloc is the trusted
          choice for water conservation.
        </p>
      </div>

      <!-- All Clients - Logo Style Grid -->
      <div class="client-category">
        <h3>Government & Public Sector</h3>
        <div class="logo-grid">
          <div class="logo-card govt">
            <img src={`${import.meta.env.BASE_URL}/images/clients/phed-rajasthan.png`} alt="PHED Rajasthan" class="logo-img" />
            <div class="logo-text">
              <span class="company">PHED Rajasthan</span>
              <span class="industry">Public Health Engineering Dept.</span>
            </div>
          </div>
          <div class="logo-card govt">
            <img src={`${import.meta.env.BASE_URL}/images/clients/govt-maharashtra.png`} alt="Govt of Maharashtra" class="logo-img" />
            <div class="logo-text">
              <span class="company">Govt of Maharashtra</span>
              <span class="industry">State Government</span>
            </div>
          </div>
          <div class="logo-card govt">
            <img src={`${import.meta.env.BASE_URL}/images/clients/mcgm.png`} alt="MCGM" class="logo-img" />
            <div class="logo-text">
              <span class="company">Municipal Corp. Greater Mumbai</span>
              <span class="industry">Municipal Corporation</span>
            </div>
          </div>
          <div class="logo-card govt">
            <img src={`${import.meta.env.BASE_URL}/images/clients/nmdc.png`} alt="NMDC" class="logo-img" />
            <div class="logo-text">
              <span class="company">NMDC Limited</span>
              <span class="industry">National Mineral Development</span>
            </div>
          </div>
          <div class="logo-card govt">
            <img src={`${import.meta.env.BASE_URL}/images/clients/ntpc.png`} alt="NTPC" class="logo-img" />
            <div class="logo-text">
              <span class="company">NTPC Limited</span>
              <span class="industry">National Thermal Power Corp.</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Industrial & Engineering -->
      <div class="client-category">
        <h3>Industrial & Engineering</h3>
        <div class="logo-grid">
          <div class="logo-card industrial">
            <img src={`${import.meta.env.BASE_URL}/images/clients/lt.png`} alt="L&T" class="logo-img" />
            <div class="logo-text">
              <span class="company">Larsen & Toubro</span>
              <span class="industry">Engineering & Construction</span>
            </div>
          </div>
          <div class="logo-card industrial">
            <img src={`${import.meta.env.BASE_URL}/images/clients/jsw.png`} alt="JSW" class="logo-img" />
            <div class="logo-text">
              <span class="company">JSW Steel</span>
              <span class="industry">Steel Manufacturing</span>
            </div>
          </div>
          <div class="logo-card industrial">
            <img src={`${import.meta.env.BASE_URL}/images/clients/hindustan-zinc.png`} alt="HZL" class="logo-img" />
            <div class="logo-text">
              <span class="company">Hindustan Zinc</span>
              <span class="industry">Mining & Metals</span>
            </div>
          </div>
          <div class="logo-card industrial">
            <img src={`${import.meta.env.BASE_URL}/images/clients/hospet-steels.png`} alt="HSL" class="logo-img" />
            <div class="logo-text">
              <span class="company">Hospet Steels Ltd</span>
              <span class="industry">Steel Manufacturing</span>
            </div>
          </div>
          <div class="logo-card industrial">
            <img src={`${import.meta.env.BASE_URL}/images/clients/mukand.png`} alt="Mukand" class="logo-img" />
            <div class="logo-text">
              <span class="company">Mukand Ltd</span>
              <span class="industry">Steel & Engineering</span>
            </div>
          </div>
          <div class="logo-card industrial">
            <img src={`${import.meta.env.BASE_URL}/images/clients/slr-metaliks.png`} alt="SLR" class="logo-img" />
            <div class="logo-text">
              <span class="company">SLR Metaliks</span>
              <span class="industry">Metal Processing</span>
            </div>
          </div>
          <div class="logo-card industrial">
            <img src={`${import.meta.env.BASE_URL}/images/clients/kirloskar.png`} alt="Kirloskar" class="logo-img" />
            <div class="logo-text">
              <span class="company">Kirloskar Ferrous</span>
              <span class="industry">Iron & Steel</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Cement Industry -->
      <div class="client-category">
        <h3>Cement Industry</h3>
        <div class="logo-grid">
          <div class="logo-card cement">
            <img src={`${import.meta.env.BASE_URL}/images/clients/ultratech.png`} alt="UltraTech" class="logo-img" />
            <div class="logo-text">
              <span class="company">UltraTech Cement</span>
              <span class="industry">Aditya Birla Group</span>
            </div>
          </div>
          <div class="logo-card cement">
            <img src={`${import.meta.env.BASE_URL}/images/clients/adani.png`} alt="Adani Cement" class="logo-img" />
            <div class="logo-text">
              <span class="company">Adani Cement</span>
              <span class="industry">Adani Group</span>
            </div>
          </div>
          <div class="logo-card cement">
            <img src={`${import.meta.env.BASE_URL}/images/clients/ambuja.png`} alt="Ambuja" class="logo-img" />
            <div class="logo-text">
              <span class="company">Ambuja Cement</span>
              <span class="industry">Cement Manufacturing</span>
            </div>
          </div>
          <div class="logo-card cement">
            <img src={`${import.meta.env.BASE_URL}/images/clients/jk-lakshmi.png`} alt="JK Lakshmi" class="logo-img" />
            <div class="logo-text">
              <span class="company">JK Lakshmi Cement</span>
              <span class="industry">JK Organisation</span>
            </div>
          </div>
          <div class="logo-card cement">
            <img src={`${import.meta.env.BASE_URL}/images/clients/penna.png`} alt="Penna" class="logo-img" />
            <div class="logo-text">
              <span class="company">Penna Cement</span>
              <span class="industry">Cement Manufacturing</span>
            </div>
          </div>
          <div class="logo-card cement">
            <img src={`${import.meta.env.BASE_URL}/images/clients/maha-cement.png`} alt="Maha Cement" class="logo-img" />
            <div class="logo-text">
              <span class="company">Maha Cement</span>
              <span class="industry">Cement Manufacturing</span>
            </div>
          </div>
          <div class="logo-card cement">
            <img src={`${import.meta.env.BASE_URL}/images/clients/orient.png`} alt="Orient" class="logo-img" />
            <div class="logo-text">
              <span class="company">Orient Cement</span>
              <span class="industry">CK Birla Group</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Other Industries -->
      <div class="client-category">
        <h3>Other Industries</h3>
        <div class="logo-grid">
          <div class="logo-card other">
            <img src={`${import.meta.env.BASE_URL}/images/clients/nirma.png`} alt="Nirma" class="logo-img" />
            <div class="logo-text">
              <span class="company">Nirma Limited</span>
              <span class="industry">Consumer Goods</span>
            </div>
          </div>
          <div class="logo-card other">
            <img src={`${import.meta.env.BASE_URL}/images/clients/jk-tyre.png`} alt="JK Tyre" class="logo-img" />
            <div class="logo-text">
              <span class="company">JK Tyre</span>
              <span class="industry">Tyre Manufacturing</span>
            </div>
          </div>
          <div class="logo-card other">
            <img src={`${import.meta.env.BASE_URL}/images/clients/syngenta.png`} alt="Syngenta" class="logo-img" />
            <div class="logo-text">
              <span class="company">Syngenta</span>
              <span class="industry">Agrochemicals</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials / Use Cases -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Success Stories</span>
        <h2 class="section-title">Making an Impact</h2>
      </div>

      <div class="use-cases-grid">
        <div class="use-case">
          <div class="use-case-header">
            <div class="use-case-icon">
              <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="8" y="24" width="48" height="32" rx="4"/>
                <path d="M16 24V12a16 16 0 0132 0v12"/>
                <circle cx="32" cy="40" r="8"/>
              </svg>
            </div>
            <h3>Municipal Water Supply</h3>
          </div>
          <p>
            Multiple municipal corporations have implemented Evaloc on their drinking water reservoirs,
            achieving significant water savings during critical summer months when demand peaks and
            evaporation is highest.
          </p>
          <div class="use-case-stat">
            <span class="number">30%+</span>
            <span class="label">Average water savings achieved</span>
          </div>
        </div>

        <div class="use-case">
          <div class="use-case-header">
            <div class="use-case-icon">
              <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M8 56h48"/>
                <path d="M16 56V32l16-24 16 24v24"/>
                <rect x="24" y="40" width="16" height="16"/>
              </svg>
            </div>
            <h3>Industrial Applications</h3>
          </div>
          <p>
            Cement plants, steel mills, and power stations across India use Evaloc to protect their
            process water storage. This ensures continuous operations even during water scarcity periods.
          </p>
          <div class="use-case-stat">
            <span class="number">100+</span>
            <span class="label">Industrial projects completed</span>
          </div>
        </div>

        <div class="use-case">
          <div class="use-case-header">
            <div class="use-case-icon">
              <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M8 56h48"/>
                <path d="M12 56V36l8-12h24l8 12v20"/>
                <path d="M24 56V44h16v12"/>
              </svg>
            </div>
            <h3>Agricultural Ponds</h3>
          </div>
          <p>
            Thousands of farm ponds across India have been treated with Evaloc, extending water
            availability for irrigation and helping farmers cope with delayed monsoons.
          </p>
          <div class="use-case-stat">
            <span class="number">1000s</span>
            <span class="label">Farm ponds protected</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Regional Coverage -->
  <section class="section section-dark">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Geographic Reach</span>
        <h2 class="section-title">Nationwide Coverage</h2>
        <p class="section-subtitle">
          Evaloc has been deployed across India and is expanding to international markets including
          EU countries facing water scarcity challenges.
        </p>
      </div>

      <div class="regions-grid">
        <div class="region-card">
          <h4>Western India</h4>
          <p>Maharashtra, Gujarat, Rajasthan</p>
          <span class="project-count">50+ projects</span>
        </div>
        <div class="region-card">
          <h4>Southern India</h4>
          <p>Karnataka, Andhra Pradesh, Tamil Nadu</p>
          <span class="project-count">40+ projects</span>
        </div>
        <div class="region-card">
          <h4>Central India</h4>
          <p>Madhya Pradesh, Chhattisgarh</p>
          <span class="project-count">30+ projects</span>
        </div>
        <div class="region-card">
          <h4>Northern India</h4>
          <p>Uttar Pradesh, Haryana, Punjab</p>
          <span class="project-count">20+ projects</span>
        </div>
      </div>

      <div class="expansion-note">
        <h3>Expanding to Europe</h3>
        <p>
          With OECD certification and EU compliance, Evaloc is now available for projects in
          Portugal, Spain, France, Italy, Greece, Cyprus, and other Mediterranean regions
          experiencing high evaporation rates.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Join Our Growing Client Base</h2>
        <p>Discover how Evaloc can help conserve water for your organization.</p>
        <div class="cta-actions">
          <a href="/contact" class="btn btn-secondary btn-lg">Request Assessment</a>
          <a href="/technology" class="btn btn-outline btn-lg" style="border-color: white; color: white;">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: white;
    padding: 10rem 0 5rem;
    text-align: center;
    margin-top: 80px;
  }

  .page-label {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .page-header h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .page-header p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Client Stats */
  .client-stats {
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
  }

  .client-stats .stat {
    text-align: center;
  }

  .client-stats .stat-number {
    display: block;
    font-family: var(--font-display);
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
  }

  .client-stats .stat-label {
    display: block;
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }

  /* Client Categories */
  .client-category {
    margin-bottom: 3rem;
  }

  .client-category h3 {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-border);
  }

  /* Logo Grid - New Professional Layout */
  .logo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .logo-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition);
    border-left: 4px solid transparent;
  }

  .logo-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .logo-initials {
    width: 56px;
    height: 56px;
    min-width: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: -0.02em;
  }

  .logo-img {
    width: 56px;
    height: 56px;
    min-width: 56px;
    border-radius: var(--radius-md);
    object-fit: contain;
    background: white;
    padding: 4px;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    min-width: 0;
  }

  .logo-text .company {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--color-text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .logo-text .industry {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Government sector - Blue */
  .logo-card.govt {
    border-left-color: #0369a1;
  }

  .logo-card.govt .logo-initials {
    background: linear-gradient(135deg, #e0f2fe, #bae6fd);
    color: #0369a1;
  }

  /* Industrial sector - Slate/Gray */
  .logo-card.industrial {
    border-left-color: #475569;
  }

  .logo-card.industrial .logo-initials {
    background: linear-gradient(135deg, #f1f5f9, #cbd5e1);
    color: #334155;
  }

  /* Cement industry - Amber */
  .logo-card.cement {
    border-left-color: #d97706;
  }

  .logo-card.cement .logo-initials {
    background: linear-gradient(135deg, #fef3c7, #fde68a);
    color: #92400e;
  }

  /* Other industries - Green */
  .logo-card.other {
    border-left-color: #16a34a;
  }

  .logo-card.other .logo-initials {
    background: linear-gradient(135deg, #dcfce7, #bbf7d0);
    color: #166534;
  }

  /* Use Cases */
  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .use-case {
    background: white;
    padding: 2rem;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
  }

  .use-case-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .use-case-icon {
    width: 48px;
    height: 48px;
    background: var(--color-primary);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .use-case-icon svg {
    width: 24px;
    height: 24px;
    color: white;
  }

  .use-case h3 {
    font-family: var(--font-sans);
    font-size: 1.15rem;
  }

  .use-case p {
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .use-case-stat {
    background: var(--color-bg-alt);
    padding: 1rem;
    border-radius: var(--radius-md);
    text-align: center;
  }

  .use-case-stat .number {
    display: block;
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .use-case-stat .label {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  /* Regions */
  .regions-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .region-card {
    background: white;
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    text-align: center;
  }

  .region-card h4 {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .region-card p {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .project-count {
    display: inline-block;
    background: var(--color-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .expansion-note {
    background: white;
    padding: 2rem;
    border-radius: var(--radius-xl);
    text-align: center;
    border-left: 4px solid var(--color-secondary);
  }

  .expansion-note h3 {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
  }

  .expansion-note p {
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
  }

  .cta-content {
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .logo-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .use-cases-grid {
      grid-template-columns: 1fr;
    }

    .regions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .client-stats {
      gap: 2rem;
    }

    .logo-grid {
      grid-template-columns: 1fr;
    }

    .regions-grid {
      grid-template-columns: 1fr;
    }

    .page-header {
      padding: 8rem 0 3rem;
    }

    .logo-card {
      padding: 0.875rem 1rem;
    }

    .logo-initials {
      width: 48px;
      height: 48px;
      min-width: 48px;
      font-size: 0.9rem;
    }
  }
</style>
